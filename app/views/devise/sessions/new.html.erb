<div class="text-center">
  <main class="form-auth">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Sign In</h1>

      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, class: "form-control", id: "floatingInput", placeholder: "Email address", autocomplete: "email" %>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
        <label for="floatingPassword">Password</label>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="no-scaffold checkbox mb-3">
          <label>
            <%= f.check_box :remember_me, value: "remember-me" %> Remember me
        </label>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: "w-100 btn btn-lg btn-dark" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </main>
</div>