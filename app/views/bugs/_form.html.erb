<%= form_with(model: [ project, bug ], local: true) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <p>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </p>
  <p>
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline %>
  </p>

  <div class="no-scaffold">
    Type:
    <%= form.radio_button :category, :feature %> 
    <%= form.label :category, 'Feature', value: :feature %>
    <%= form.radio_button :category, :bug %>
    <%= form.label :category, 'Bug', value: :bug %>
  </div>

  <p>
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.map { |key, value| [key.humanize, key] } %>
  </p>
  
  <p>
    <%= form.label :screenshot %>
    <%= form.file_field :screenshot, direct_upload: true %>
  </p><br />
   
  <p>
    <%= form.submit %>
  </p>
<% end %>


